<project name="lift-scripts" default="install">
  <property environment="env"/>

  <target name="install">
		<mkdir dir="${env.HOME}/bin"/>
		<copy todir="${env.HOME}/bin">
      <fileset dir="bin" includes="**/*.sh"/>
      <mapper type="glob" from="*.sh" to="*"/>
    </copy>
  </target>
</project>
